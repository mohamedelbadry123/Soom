@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-12">
        <h3 class="alert-success p-3 text-center">All Categories</h3>
    </div>
</div>
<br />
<div class="row">
    <div class="container">
        <div class="row">

            <table id="CategoryDatatable" class="table table-striped table-bordered">
                <thead>
                    <tr>

                        <td>Category Name</td>
                        <td>Description</td>
                        <td>Actions</td>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>


        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $("#CategoryDatatable").DataTable({
                "processing": true,
                "serverSide": true,
                "filter": true,
                "ajax": {
                    "url": "/categoryApi",
                    "type": "POST",
                    "datatype": "json"
                },
               
                  "columns": [
                    
                      { "data": "name" },
                      { "data": "desc"  },
                     {
                        data: "id",
                        render: function (data) {
                            return "<a class='btn btn-primary' href='/Category/Update/" + data + "'>Edit</a>";
                        }
                    }
             ]
            });

          
        })

    

    </script>
}